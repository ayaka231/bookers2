<!DOCTYPE html>
<html>
  <head>

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <title>Bookers2</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class ="d-flex flex-column vh-100">
　 <header>
　  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
　   <div class="container">
　    <a class= "navbar-brand p-3" href="/">Bookers</a>
　    <button class="navbar-toggler" type="button" date-toggle="collapse" date-target="#navbarNavDropdown" aria-controls="navbarDropdown" aria-expanded="false" aria-label="Toggle navigation">
　     <span class = "navbar-toggler-icon"></span>
　    </button>

      <div class = "collapse navbar-collapse" id="navbarDropdown">
       <ul class="navbar-nav ml-auto">

　     <% if user_signed_in? %>

       <li class = "nav-item">
         <%= link_to "Home", root_path, class: 'fas fa-home nav-link text-light' %>
       </li>

       <li  class = "nav-item">
        <%=link_to "Books", books_path, class: 'fas fa-book-open nav-link text-light' %>
       </li>

       <li  class = "nav-item">
         <%= link_to "Users", users_path, class: 'fas fa-users nav-link text-light' %>
       </li>

       <li  class = "nav-item">
       <%= link_to "logout", destroy_user_session_path, method: :delete, class: 'fas fa-sign-out-alt nav-link text-light' %>
       </li>

       <% else %>
       <li  class = "nav-item">
        <%= link_to "Home", root_path, class: 'fas fa-home nav-link text-light' %>
       </li>

       <li  class = "nav-item">
        <%= link_to "About", about_path, class: 'fas fa-link nav-link text-light' %>
       </li>

       <li  class = "nav-item">
        <%= link_to "sign up", new_user_registration_path, class: 'fas fa-user-plus nav-link text-light' %>
       </li>

       <li  class = "nav-item">
        <%= link_to "log in", new_user_session_path, class: 'fas fa-sign-in-alt nav-link text-light' %>
       </li>
       <% end %>
       </ul>
      </div>
     </div>
    </nav>
   </header>

   <main>
   <% flash.each do |message_type, message| %>
     <%= content_tag :div, message, class: message_type %>
    <% end %>
    <%= yield %>
    </main>

    <footer>
     <div class="container mt-5">
       <div class="row">
         <div class="mx-auto">
           <P>CopyRight Infratop.inc</P>
         </div>
       </div>
     </div>
    </footer>
  </body>
</html>
