<% if @user.errors.any? %>
  <%= @user.errors.count %>errors
  <% @user.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<div class ="container">
  <div class ="row">
    <div class ="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>User info</h2>
     <%= form_with model:@user, local:true do |f| %>

    <div class ="form-group">
    <label for = "user_name" >Name</label>
     <%= f.text_field :name, autofocus: true, id:"user_name", class: 'form_control user_name' %>
    </div>

    <div class ="form-group">
     <label for="user_image">Image</label>
     <%= f.attachment_field :profile_image, class: 'form_control user_image' %>
    </div>

    <div class ="form-group">
     <label for = "user_introduction" >Introduction</label>
    <%= f.text_area :introduction, class: 'form_control user_introduction' %>
    </div>

    <%= f.submit 'Update User', class: 'btn btn-secondary' %>

    <% end %>
   </div>
  </div>
</div>

