<h1>New Book</h1>
<%= form_with model:@book, local:true do |f| %>

<h4>Title</h4>
<%=f.text_field :title %>

<h4>Opinion</h4>
<%= f.text_area :body %>

<%= f.submit 'Create Book' %>

<% end %>

<h2>Books</h2>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>

  <tboudy>
    <tr>
      <% @books.each do |book| %>

      <td><%= link_to book_path(book.id) do %>
        <%= book.title %>
       <% end %>
      </td>
      <td><%= book.body %></td>
    </tr>
    <% end %>
  </tboudy>
</table>